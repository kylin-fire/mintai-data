                <version>1.0</version>
            </dependency>
            <dependency>
                <groupId>com.alibaba.toolkit</groupId>
                <artifactId>toolkit-common-lang</artifactId>
                <version>1.0</version>
            </dependency>

            <!-- ======= -->
